{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": { "~/*": ["./*"] },
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}